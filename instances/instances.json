{
  "version": 1,
  "defaults": {
    "runtime": "orbstack-docker",
    "image": "openclaw-factory/gateway:2026.2.11",
    "proxy": {
      "HTTP_PROXY": "http://host.docker.internal:7897",
      "HTTPS_PROXY": "http://host.docker.internal:7897",
      "NO_PROXY": "localhost,127.0.0.1,::1,zjuapi.com,*.zjuapi.com"
    },
    "zjuapi": {
      "baseUrl": "https://zjuapi.com/v1/"
    },
    "feishu": {
      "domain": "feishu",
      "dmPolicy": "pairing",
      "groupPolicy": "disabled",
      "streaming": true,
      "blockStreaming": true
    },
    "groups": {
      "requireMention": true,
      "enabled": false,
      "allowChatIds": []
    },
    "agents": {
      "main": {
        "sandbox": {
          "mode": "off"
        }
      },
      "ask": {
        "sandbox": {
          "mode": "all",
          "scope": "agent"
        },
        "tools": {
          "allow": [
            "message",
            "session_status",
            "sessions_list",
            "sessions_history",
            "memory_search",
            "memory_get",
            "feishu_doc",
            "feishu_wiki",
            "feishu_drive"
          ],
          "deny": [
            "group:runtime",
            "group:fs",
            "group:ui",
            "group:nodes",
            "group:automation"
          ]
        }
      }
    },
    "cron": {
      "jobs": [
        {
          "name": "gitsync-daily",
          "schedule": {
            "kind": "cron",
            "expr": "30 3 * * *",
            "tz": "Asia/Shanghai"
          },
          "sessionTarget": "isolated",
          "payload": {
            "kind": "agentTurn",
            "message": "bash /root/.openclaw/scripts/git-sync.sh push",
            "timeoutSeconds": 600
          },
          "delivery": {
            "mode": "none"
          },
          "enabled": true
        }
      ]
    }
  },
  "instances": [
    {
      "name": "test2",
      "gateway": {
        "port": 28789,
        "bind": "loopback",
        "auth": {
          "mode": "token"
        }
      },
      "storage": {
        "root": "~/code/openclaw-instances/test2",
        "state": "${root}/state",
        "workspaceMain": "${root}/workspace-main",
        "workspaceAsk": "${root}/workspace-ask"
      },
      "feishu": {
        "accountId": "main",
        "appId": "cli_a90684e712799bd1",
        "appSecret": "fYMDVebSrs2BzEmu4zBerfSqgQsK3mqT",
        "botName": "test2"
      },
      "routing": {
        "ownerOpenId": "ou_dummy_not_owner"
      },
      "notes": "MVP instance 1"
    },
    {
      "name": "guokaiwen",
      "gateway": {
        "port": 28790,
        "bind": "loopback",
        "auth": {
          "mode": "token"
        }
      },
      "storage": {
        "root": "~/code/openclaw-instances/guokaiwen",
        "state": "${root}/state",
        "workspaceMain": "${root}/workspace-main",
        "workspaceAsk": "${root}/workspace-ask"
      },
      "feishu": {
        "accountId": "main",
        "appId": "cli_a9060c499bb89cbb",
        "appSecret": "7QFTmTtDWHDqxGUeevznhdCVqPV1ui3o",
        "botName": "郭凯文"
      },
      "routing": {
        "ownerOpenId": "ou_81f0e43c51b96691f027f5647389f418"
      },
      "profile": {
